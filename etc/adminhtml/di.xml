<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="productattachment" xsi:type="array">
                    <item name="class" xsi:type="string">
                        MageINIC\ProductAttachment\Ui\DataProvider\Product\Modifier\ProductAttachment
                    </item>
                    <item name="sortOrder" xsi:type="number">300</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="MageINIC\ProductAttachment\Ui\DataProvider\Product\Modifier\ProductAttachment">
        <arguments>
            <argument name="formName" xsi:type="string">product_form</argument>
            <argument name="scopeName" xsi:type="string">product_form.product_form</argument>
            <argument name="dataSourceName" xsi:type="string">product_form.product_form_data_source</argument>
        </arguments>
    </type>
</config>
